{
  "name": "messenger-desktop",
  "version": "1.1.0",
  "main": "main.js",
  "description": "Messenger Desktop",
  "author": "Xenius",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xenius97/messenger-desktop"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:installer": "electron-builder --win nsis",
    "build:portable": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.messenger.desktop",
    "productName": "Messenger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "assets/**/*"
    ],
    "win": {
      "icon": "assets/app.ico"
    },
    "nsis": {
      "artifactName": "Messenger-Setup-v${version}.exe",
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "Messenger-Portable-v${version}.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "Xenius97",
      "repo": "messenger-desktop"
    }
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "electron-updater": "^6.6.2"
  }
}
